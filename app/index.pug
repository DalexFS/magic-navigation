mixin list(clase,name,icon)
	li(class=clase)
		a(href="#")
			span.icon
				//- icon
				ion-icon(name=icon)
			span.text #{name}


doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		title Magic Nav (PUG,SASS,JS)
		//- CSS
		link(rel="stylesheet", href="../public/css/main.css")
		//- JAVASCRIPT
		script(defer, src="../app/main.js")
		//- IONICONS
		script(defer, type="module", src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js")
		script(nomodule, defer, src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js") 
	body
		//- Navegation
		nav.nav
			ul
				+list("list active", "Home","home-outline")
				+list("list","Profile", "person-outline")
				+list("list","Skills","code-slash-outline")
				+list("list","Expps", "school-outline")
				+list("list","Contact", "chatbubble-outline")
				div.indicator

		
	